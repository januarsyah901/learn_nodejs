<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %> </div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">nama</th>
            <th scope="col">noHP</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length < 1) { %>
          <div class="alert alert-danger fw-bold" role="alert">Contact Kosong. <br /></div>
          <% }else{ %> <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"> detail </a>
            </td>
          </tr>

          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
